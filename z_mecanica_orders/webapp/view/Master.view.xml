<mvc:View
	controllerName="sap.ui.demo.masterdetail.controller.Master"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:semantic="sap.f.semantic"	
>

	<semantic:SemanticPage
		id="masterPage"
		preserveHeaderStateOnScroll="true"
		toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title			
				id="masterPageTitle"
				text="Ordens"
				level="H1"/>
		</semantic:titleHeading>
		<semantic:content>
						<VBox fitContainer="true">

							<smartFilterBar:SmartFilterBar
								id="smartFilterBarr"
								persistencyKey="UniqueAndStablePersistencyKey"
								considerSelectionVariants="true"
								entitySet="OrdersSet"
								enableBasicSearch="true"
								basicSearchFieldName="Id"
								showClearButton="true"
								filterBarExpanded="false"
								liveMode="true"
								controlConfiguration="true"
								
							>
								<smartFilterBar:controlConfiguration>
									<smartFilterBar:ControlConfiguration
										key="Id"
										visibleInAdvancedArea="true"
									/>

									<smartFilterBar:ControlConfiguration
										key="Plate"
										preventInitialDataFetchInValueHelpDialog="false"
										visibleInAdvancedArea="true"
																	
									/>
									<smartFilterBar:ControlConfiguration
										key="Brand"
										visibleInAdvancedArea="true"
									/>

									<smartFilterBar:ControlConfiguration
										key="Model"
										visibleInAdvancedArea="true"
									/>

									<smartFilterBar:ControlConfiguration
										key="Fabyear"
										visibleInAdvancedArea="true"
									/>

									<smartFilterBar:ControlConfiguration
										key="Color"
										visibleInAdvancedArea="true"
									/>

									<smartFilterBar:ControlConfiguration
										key="Cpf"
										visibleInAdvancedArea="true"
									/>

									<smartFilterBar:ControlConfiguration
										key="Name"
										visibleInAdvancedArea="true"
									/>

									<smartFilterBar:ControlConfiguration
										key="Telehpone"
										visibleInAdvancedArea="true"
									/>

									<smartFilterBar:ControlConfiguration
										key="Address"
										visibleInAdvancedArea="true"
									/>

								</smartFilterBar:controlConfiguration>
								<!-- layout data used to make the table growing but the filter bar fixed -->
								<smartFilterBar:layoutData>
									<FlexItemData shrinkFactor="0"/>
								</smartFilterBar:layoutData>
							</smartFilterBar:SmartFilterBar>
							<smartTable:SmartTable
								id="smartTable"
								entitySet="OrdersSet"
								smartFilterId="smartFilterBar"
								tableType="ResponsiveTable"
								useVariantManagement="false"
								header="Ordens de serviÃ§o e produtos"
								initiallyVisibleFields="Id,Plate,Brand,Model,Fabyear,Color,Cpf,Name,Telephone,Address"
								enableAutoBinding="true"
								
							>
								<Table
									id="SelectionTable"
									mode="SingleSelectMaster"
									selectionChange="onSelectionChange"
								/>
								<smartTable:customToolbar>
									<OverflowToolbar design="Transparent">
										<ToolbarSpacer/>
										<OverflowToolbarButton
											icon="sap-icon://add-document"
											text="{i18n>create}"
											tooltip="{i18n>create}"
											press="onCreate"
										/>
										<OverflowToolbarButton
											icon="sap-icon://delete"
											text="{i18n>delete}"
											tooltip="{i18n>delete}"
											press="onDelete"
										/>
										<OverflowToolbarButton
											icon="sap-icon://edit"
											text="{i18n>edit}"
											tooltip="{i18n>edit}"
											press="onEdit"
										/>
									</OverflowToolbar>
								</smartTable:customToolbar>
								<smartTable:layoutData>
									<FlexItemData
										growFactor="1"
										baseSize="0%"
									/>
								</smartTable:layoutData>
							</smartTable:SmartTable>
						</VBox>		
					</semantic:content>
	</semantic:SemanticPage>
</mvc:View>