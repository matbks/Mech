	<mvc:View
	controllerName="sap.ui.demo.masterdetail.controller.Detail"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:uxap="sap.uxap"
	xmlns:layout="sap.ui.layout"
>
	<semantic:SemanticPage
		id="detailPage"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}"
	>

		<semantic:titleHeading>
			<Title
				text="Itens"
				level="H1"
			/>
			
		</semantic:titleHeading>


		<semantic:headerContent>

		<!-- Title Content-->


			<layout:HorizontalLayout allowWrapping="true">
				<layout:VerticalLayout class="sapUiMediumMarginEnd">
					<ObjectAttribute
						title="Id"
						text="{Id}"
					/>
					<ObjectAttribute
						title="Placa"
						text="{Plate}"
					/>
					
				</layout:VerticalLayout>
				<layout:VerticalLayout>
					<ObjectAttribute
						title="Cpf"
						text="{Cpf}"
					/>	

					<ObjectAttribute
						title="Nome"
						text="{Name}"
					/>

				</layout:VerticalLayout>
			</layout:HorizontalLayout>
		</semantic:headerContent>
		<semantic:content>
			<uxap:ObjectPageLayout
				id="ObjectPageLayout"
				enableLazyLoading="true"
				useIconTabBar="true"
				showTitleInHeaderContent="false"
				selectedSection="create"
				upperCaseAnchorBar="false"
				showHeaderContent="false"
			>
				<!-- <uxap:headerTitle>
					<uxap:ObjectPageDynamicHeaderTitle>

						<uxap:snappedHeading>
							<FlexBox
								fitContainer="true"
								alignItems="Center"
							>
								 
								 
							</FlexBox>

							
						</uxap:snappedHeading>
						<uxap:expandedContent>
						
						<Avatar
									src="https://www.nicepng.com/png/full/208-2087825_it-services-products-and-services-icon.png"
									class="sapUiTinyMarginEnd"
								/> 
							
						<Text text="Order: {Id}"  />
						</uxap:expandedContent>
					</uxap:ObjectPageDynamicHeaderTitle>
					
				</uxap:headerTitle> -->
				<uxap:headerContent>
					<FlexBox
						wrap="Wrap"
						fitContainer="true"
					/>
				</uxap:headerContent>
				<uxap:sections>
					<uxap:ObjectPageSection
						titleUppercase="false"
						id="create"
						title="Adicionar produto ou serviço"
					>
						<uxap:subSections>
							<uxap:ObjectPageSubSection
								id="goalsSS1"
								titleUppercase="false"
							>
								<uxap:blocks>
									<Table 
									id="pes"
									items="{servicesAndProducts>/order_items}"
									>

										<headerToolbar>
											<Toolbar>
												<Button
													icon="sap-icon://add"
													text="Criar"
													press="addRow"
												/>

												<Button
													icon="sap-icon://save"
													text="Salvar"
													press="saveRow"
												/>
											</Toolbar>
										</headerToolbar>
										<columns>
											
											<Column width="70px">
											<Text text="Deletar"/>
											</Column>
		
											<Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<Text text="Descrição"/>
											</Column>
											<Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<Text text="Quantidade"/>
											</Column>
											 <Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<Text text="Unidade"/>
											</Column> 
											 <Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<Text text="Preço"/>
											</Column> 

											<Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<Text text="Tipo"/>
											</Column>
										</columns>

										<items>
											<ColumnListItem>
												<cells>
													<Button
														icon="sap-icon://delete"
														press="deleteRow"
														type="Reject"
													/>

													<Input value="{servicesAndProducts>Description}"/>
													<Input value="{servicesAndProducts>Quantity}"/>
													<Input value="{servicesAndProducts>Unit}"/>
													<Input value="{servicesAndProducts>Price}"/>
												    <Input value="{servicesAndProducts>Type}"/>

												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					
				</uxap:sections>
			</uxap:ObjectPageLayout>
		</semantic:content>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
				id="exitFullScreen"
				visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
				press=".toggleFullScreen"
			/>
		</semantic:exitFullScreenAction>
	</semantic:SemanticPage>
</mvc:View>