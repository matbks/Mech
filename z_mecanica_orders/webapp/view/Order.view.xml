<mvc:View
	controllerName="sap.ui.demo.masterdetail.controller.Order"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:layout="sap.ui.layout"
	xmlns:uxap="sap.uxap"
	xmlns:semantic="sap.f.semantic"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<semantic:SemanticPage
		id="detailPage"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}"
	>
		<semantic:titleHeading>
			<Title
				text="Order - {cc}"
				level="H2"
			/>
		</semantic:titleHeading>
		<semantic:content>
			<uxap:ObjectPageLayout
				id="ObjectPageLayout"
				enableLazyLoading="true"
				useIconTabBar="true"
				showTitleInHeaderContent="true"
				selectedSection="create"	
				upperCaseAnchorBar="false"
			>
				<uxap:headerTitle>
					<uxap:ObjectPageDynamicHeaderTitle>
						<uxap:expandedHeading>
							<Title
								text="{Name}"
								wrapping="true"
							/>
						</uxap:expandedHeading>
						<uxap:snappedHeading>
							<FlexBox
								fitContainer="true"
								alignItems="Center"
							>
								<!-- <Avatar
									src="https://www.petz.com.br/blog/wp-content/uploads/2019/04/quantos-anos-vive-um-gatinho.jpg"
									class="sapUiTinyMarginEnd"
								/> -->
								<Title
									text="{Name}"
									wrapping="true"
								/>
							</FlexBox>
						</uxap:snappedHeading>
						<uxap:expandedContent>
							<Text text="{Species}"/>
						</uxap:expandedContent>
						<uxap:snappedContent>
							<Text text="{Species}"/>
						</uxap:snappedContent>
						<uxap:snappedTitleOnMobile>
							<Title text="{Species}"/>
						</uxap:snappedTitleOnMobile>
						<uxap:actions>
							<Button
								text="Edit"
								type="Emphasized"
							/>
							<Button
								type="Transparent"
								text="Delete"
							/>
							<Button
								type="Transparent"
								text="Copy"
							/>
							<OverflowToolbarButton
								icon="sap-icon://action"
								type="Transparent"
								text="Share"
								tooltip="action"
							/>
						</uxap:actions>
					</uxap:ObjectPageDynamicHeaderTitle>
				</uxap:headerTitle>
				<uxap:headerContent>
					<FlexBox
						wrap="Wrap"
						fitContainer="true"
					>
						<!-- <Avatar
							class="sapUiSmallMarginEnd"
							src="https://www.petz.com.br/blog/wp-content/uploads/2019/04/quantos-anos-vive-um-gatinho.jpg"
							displaySize="L"
						/> -->
						<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
							<ObjectAttribute
								title="{/#Animals/Age/@sap:label}"
								text="{Age}"
							/>
							<ObjectAttribute
								title="{/#Animals/Race/@sap:label}"
								text="{Race}"
							/>
						</layout:VerticalLayout>
						<!-- <layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
							<Image src="./test-resources/sap/uxap/images/linkedin.png"/>
							<Image
								src="./test-resources/sap/uxap/images/Twitter.png"
								class="sapUiSmallMarginBegin"
							/>
						</layout:HorizontalLayout> -->
						<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
							<ObjectAttribute
								title="{/#Animals/Createdon/@sap:label}"
								text="{
									path: 'Createdon',
									type: 'sap.ui.model.type.DateTime',
									formatOptions: {
										style: 'medium'
									}
								}"
							/>
							<!-- <VBox>
								<Label text="Achieved goals"/>
								<ProgressIndicator
									percentValue="30"
									displayValue="30%"
								/>
							</VBox> -->
						</layout:VerticalLayout>
						<!-- <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
							<Label text="San Jose, USA"/>
						</layout:VerticalLayout> -->
					</FlexBox>
				</uxap:headerContent>
				<uxap:sections>
					<uxap:ObjectPageSection
						titleUppercase="false"
						id="create"
						title="{i18n>createOrder}"
					>
						<uxap:subSections>
							<uxap:ObjectPageSubSection
								id="goalsSS1"
								titleUppercase="false"
							>
								<uxap:blocks>
									<Table
										id="ins"
										items="{/Products}"
									>
										<headerToolbar>
											<Toolbar>
												<Button
													icon="sap-icon://add"
													text="Row"
													press="addRow"
												/>
												<Button
													icon="sap-icon://display"
													text="Row"
													press="fetchRecords"
												/>
											</Toolbar>
										</headerToolbar>
										<columns>
											<Column width="50px"/>
											<Column>
												<Text text="Category"/>
											</Column>
											<Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<Text text="Description"/>
											</Column>
											<Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<Text text="Quantity"/>
											</Column>
											<Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<Text text="Unit"/>
											</Column>
											<Column
												minScreenWidth="Tablet"
												demandPopin="true"
											>
												<Text text="Value"/>
											</Column>
										</columns>
										<items>
											<ColumnListItem>
												<cells>
													<Button
														icon="sap-icon://delete"
														press="deleteRow"
														type="Reject"
													/>
													<Input value="{Category}"/>
													<Input value="{Description}"/>
													<Input value="{Quantity}"/>
													<Input value="{Unit}"/>
													<Input value="{Value}"/>
												</cells>
											</ColumnListItem>
										</items>
									</Table>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					<uxap:ObjectPageSection
						titleUppercase="false"
						id="personal"
						title="Personal"
					>
						<uxap:subSections>
							<uxap:ObjectPageSubSection
								id="personalSS1"
								title="Connect"
								titleUppercase="false"
							>
								<uxap:blocks>
									<TextArea
										width="100%"
										id="output"
									/>
									<Label text="qualquer coisa 1"/>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
							<uxap:ObjectPageSubSection
								id="personalSS2"
								title="Payment information"
								titleUppercase="false"
							>
								<uxap:blocks>
									<Label text="qualquer coisa 2"/>
								</uxap:blocks>
								<uxap:moreBlocks>
									<Label text="qualquer coisa3"/>
								</uxap:moreBlocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					<uxap:ObjectPageSection
						titleUppercase="false"
						id="employment"
						title="Employment"
					>
						<uxap:subSections>
							<uxap:ObjectPageSubSection
								id="employmentSS1"
								title="Job information"
								titleUppercase="false"
							>
								<uxap:blocks>
									<Label text="qualquer coisa 4"/>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
							<uxap:ObjectPageSubSection
								id="employmentSS2"
								title="Employee Details"
								titleUppercase="false"
							>
								<uxap:blocks>
									<Label text="qualquer coisa 5"/>
								</uxap:blocks>
								<uxap:moreBlocks>
									<Label text="qualquer coisa 6"/>
								</uxap:moreBlocks>
							</uxap:ObjectPageSubSection>
							<uxap:ObjectPageSubSection
								id="employmentSS3"
								title="Job Relationship"
								titleUppercase="false"
							>
								<uxap:blocks>
									<Label text="qualquer coisa 7 "/>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					<uxap:ObjectPageSection
						titleUppercase="false"
						id="connections"
						title="Connections"
					>
						<uxap:subSections>
							<uxap:ObjectPageSubSection
								id="connectionsSS1"
								titleUppercase="false"
							>
								<uxap:blocks>
									<Label text="qualquer coisa"/>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
				</uxap:sections>
			</uxap:ObjectPageLayout>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>